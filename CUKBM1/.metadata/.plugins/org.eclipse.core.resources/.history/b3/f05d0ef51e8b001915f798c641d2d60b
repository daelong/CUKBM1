package web;

import java.io.*;
import javax.servlet.*;
import javax.servlet.http.*;
import java.sql.*;

public class IdOverlapPreventServlet extends HttpServlet{
	public void doPost(HttpServletRequest request, HttpServletResponse response) throws
	IOException, ServletException {
	request.setCharacterEncoding("euc-kr");	
	String ID=request.getParameter("id");
	boolean IdCheck = false;
	int result;
	
	Connection conn =null;
	Statement stmt =null;
	
	try {
		Class.forName("com.mysql.jdbc.Driver");
		conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/cukbm?serverTimezone=UTC", "root", "root");
		if(conn==null)
			throw new Exception("데이터베이스에 연결할 수 없습니다.");
		stmt = conn.createStatement();
		ResultSet rs = stmt.executeQuery("select * from boarddb where seqno = " + ID + ";");
		if(rs.next()) {
			IdCheck = false;
		}
		else if(!rs.next()) { 
			IdCheck = true;
		}
		if(IdCheck == true)
			result = 1;
		else
			result = 0;
		}
		catch (Exception e) {
			throw new ServletException(e);
		}
		finally {
			try {
				stmt.close();
			}
			catch (Exception ignored) {
			}
			try {
				conn.close();
			}
			catch(Exception ignored) {
			}
		}
	}
}
